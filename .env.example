# Application
APP_NAME=Ovu Transport Aggregator
APP_ENV=development
DEBUG=True
API_VERSION=v1
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Server
HOST=0.0.0.0
PORT=8000

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=ovu_transport

# Travu API (Flights and Buses)
TRAVU_API_KEY=your-travu-api-key
TRAVU_API_URL=https://api.travu.com
TRAVU_API_SECRET=your-travu-api-secret

# NRC API (Trains)
NRC_API_KEY=your-nrc-api-key
NRC_API_URL=https://api.nrc.gov.ng
NRC_API_SECRET=your-nrc-api-secret

# Paystack Payment
PAYSTACK_SECRET_KEY=sk_test_your_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_key_here
PAYSTACK_WEBHOOK_SECRET=your-webhook-secret

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp (via Twilio)
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@ovutransport.com
SMTP_FROM_NAME=Ovu Transport

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=60

# Compliance
PCI_DSS_MODE=enabled
NDPA_COMPLIANCE=enabled
DATA_ENCRYPTION_KEY=your-encryption-key-here
